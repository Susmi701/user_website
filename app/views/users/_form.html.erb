<div class="container ">
    <div class="col-11 mx-auto ">
        <div class="row justify-content-center shadow rounded bg-white">
            <%= form_with model: @user do |f| %>  
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group  p-4 row">
                            <%= f.label :first_name, class: "form-label" %>
                            <%= f.text_field :first_name, class: "form-control " %>
                            <% @user.errors.full_messages_for(:first_name).each do |msg| %>
                                <div class="invalid-feedback" style="display: block;">
                                    <%= msg %>
                                </div>   
                            <% end %>
                        </div>
                        <div class="form-group  px-4 row">
                            <%= f.label :last_name, class: "form-label" %>
                            <%= f.text_field :last_name, class: "form-control " %>
                            <div class="invalid-feedback" style="display: block;">
                                <% @user.errors.full_messages_for(:last_name).each do |msg| %>
                                    <%= msg %>
                                <% end %>
                            </div>                            
                        </div>
                        <div class="form-group p-4 row">
                            <%= f.label :email, class: "form-label" %>
                            <%= f.email_field :email, class: "form-control  " %>
                            <% @user.errors.full_messages_for(:email).each do |msg| %>
                                <div class="invalid-feedback" style="display: block;">
                                    <%= msg %>
                                </div>
                            <% end %>
                        </div>
                        <div class="form-group px-4 row">
                            <%= f.label :password, class: "form-label" %>
                            <%= f.password_field :password, class: "form-control  " %>
                            <% @user.errors.full_messages_for(:password).each do |msg| %>
                                <div class="invalid-feedback" style="display: block;">
                                    <%= msg %>
                                </div>
                                <% end %>
                        </div>
                        <div class=" col py-4 text-center">
                            <%=  f.submit class: "btn btn-success"  %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group p-4 row">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">
                        </div>
                    </div>
                </div>
            <%end%>
        </div>
    </div>
</div>