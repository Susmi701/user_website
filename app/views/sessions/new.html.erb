<div class="container ">
    <div class="col-4 mx-auto pt-5 ">
        <div class="row justify-content-center rounded  mt-5  ">
            <%= form_with(scope: :session, url: login_path, class:"custom-bg bg-white shadow mb-3 rounded",local: true ) do |f| %>
             <h3 class="text-center m-4">Login</h3>
                <div class="mb-4 col">
                     
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-12 ">
                        <%= f.text_field :email ,class: "form-control",placeholder: "Enter your email" %> 
                    </div>
                </div>
                <div class="mb-3 col">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-12">
                <%= f.password_field :password ,class: "form-control",placeholder: "Enter password " %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col text-center">
                        <%= f.submit "Login", class: "btn btn-outline-success btn-lg my-4" %>                            
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>  

